<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp">

    <LinearLayout
        android:id="@+id/enquiry_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/loc_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/img_arrow">

                <androidx.cardview.widget.CardView
                    android:id="@+id/view"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:backgroundTint="@color/box_color1"
                    app:cardCornerRadius="15dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_pick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Chennai-"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    style="@style/SansRegularStyle"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/view"/>

                <TextView
                    android:id="@+id/txt_drop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Coimbatore"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    style="@style/SansRegularStyle"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/view"
                    android:layout_below="@+id/txt_pick"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/txt_dt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10:20pm"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    style="@style/SansRegularStyle"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/view"
                    android:layout_below="@+id/txt_drop"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/truck_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/view"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/txt_drop"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="@string/truck_type"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            style="@style/SansRegularStyle"
                            android:layout_marginStart="8dp"
                            />

                        <TextView
                            android:id="@+id/val_truck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text=""
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            style="@style/SansRegularStyle"
                            android:layout_marginStart="6dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="@string/body_type"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            style="@style/SansRegularStyle"
                            android:layout_marginStart="8dp"
                            />

                        <TextView
                            android:id="@+id/val_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text=""
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            style="@style/SansRegularStyle"
                            android:layout_marginStart="6dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:text="@string/weight"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            style="@style/SansRegularStyle"
                            android:layout_marginStart="8dp"
                            />

                        <TextView
                            android:id="@+id/val_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text=""
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            style="@style/SansRegularStyle"
                            android:layout_marginStart="6dp"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cancel_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/truck_lay"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel_reason"
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        style="@style/SansRegularStyle"
                        android:layout_marginStart="8dp"
                        />

                    <TextView
                        android:id="@+id/val_cancel_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Cancelled"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        style="@style/SansRegularStyle"
                        android:layout_marginStart="8dp"
                        />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/price_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:id="@+id/sales_unquoted_layout"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/dle_indent_uqo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/dark_red">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_delete_24"
                    android:layout_centerInParent="true"
                    app:tint="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view_indent_uqo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/box_color1">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_preview_24"
                    android:layout_centerInParent="true"
                    app:tint="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_indent_uqo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/green">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_edit_24"
                    android:layout_centerInParent="true"
                    app:tint="@color/white" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:id="@+id/sales_quoted_layout"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/view_unquote_data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/box_color1">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_preview_24"
                    android:layout_centerInParent="true"
                    app:tint="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/view_confirm_indent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/green">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_check_24"
                    android:layout_centerInParent="true"
                    app:tint="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_indent_qo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/red">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_edit_24"
                    android:layout_centerInParent="true"
                    app:tint="@color/white" />

            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/amt_quote_lay"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/green"
            android:visibility="gone"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_currency_rupee_24"
                app:tint="@color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>