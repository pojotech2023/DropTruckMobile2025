<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp">

    <RelativeLayout
        android:id="@+id/trips_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/action_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top_lay"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="DT1000"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    style="@style/SansRegularStyle"
                    android:padding="4dp"/>
                <TextView
                    android:background="@drawable/dotted_rectangle"
                    android:id="@+id/txt_dt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="DT1000"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    style="@style/SansRegularStyle"
                    android:padding="4dp"
                    android:layout_toEndOf="@id/txt_date"
                    android:layout_marginStart="2dp"/>

                <TextView
                    android:id="@+id/val_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10 kg"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    style="@style/SansRegularStyle"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/txt_dt"
                    android:drawableStart="@drawable/small_weight"
                    android:drawablePadding="1dp"
                    android:drawableTint="@color/black"/>

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/share_24px"
                    app:tint="@color/white"
                    android:padding="3dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/black_circle"
                    android:backgroundTint="@color/green"
                    android:layout_toEndOf="@id/val_weight"/>

                <TextView
                    android:id="@+id/show_pod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POD"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    style="@style/SansRegularStyle"
                    android:layout_marginStart="4dp"
                    android:padding="5dp"
                    android:background="@drawable/green_rectangle"
                    android:visibility="gone"
                    android:layout_toEndOf="@id/img_share"/>

                <!--android:layout_toEndOf="@id/val_weight"-->

                <TextView
                    android:id="@+id/create_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    style="@style/SansRegularStyle"
                    android:layout_marginStart="6dp"
                    android:padding="2dp"
                    android:background="@drawable/green_rectangle"
                    android:drawableStart="@drawable/small_driver_create"
                    android:drawablePadding="1dp"
                    android:drawableTint="@color/white"
                    android:visibility="gone"
                    android:layout_toEndOf="@id/img_share"/>

                <TextView
                    android:id="@+id/create_supplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    style="@style/SansRegularStyle"
                    android:layout_marginStart="6dp"
                    android:padding="2dp"
                    android:background="@drawable/green_rectangle"
                    android:drawableStart="@drawable/small_supplier"
                    android:drawablePadding="2dp"
                    android:drawableTint="@color/white"
                    android:visibility="gone"
                    android:layout_toEndOf="@id/img_share"/>

                <TextView
                    android:id="@+id/create_extra_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    style="@style/SansRegularStyle"
                    android:layout_marginStart="6dp"
                    android:padding="2dp"
                    android:background="@drawable/green_rectangle"
                    android:drawableStart="@drawable/small_extra_cost"
                    android:drawablePadding="2dp"
                    android:drawableTint="@color/white"
                    android:visibility="gone"
                    android:layout_toEndOf="@id/img_share"/>

                <TextView
                    android:id="@+id/create_pod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_pod"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    style="@style/SansRegularStyle"
                    android:layout_marginStart="6dp"
                    android:padding="5dp"
                    android:background="@drawable/green_rectangle"
                    android:visibility="gone"
                    android:layout_toEndOf="@id/img_share"/>

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Complete"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    style="@style/SansRegularStyle"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@id/show_pod"
                    android:background="@drawable/button_background"
                    android:visibility="gone"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pic_drop_loc_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_lay"
                android:layout_marginTop="4dp">

                <RelativeLayout
                    android:id="@+id/pic_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/pic_loc_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_location"
                        android:padding="6dp"
                        android:background="@drawable/black_circle"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/txt_pick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Chennai"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_centerVertical="true"
                        style="@style/SansRegularStyle"
                        android:layout_marginStart="4dp"
                        android:layout_toEndOf="@+id/pic_loc_img"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/dot_img"
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/pic_lay"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/vertical_line"/>

                <RelativeLayout
                    android:id="@+id/loc_lays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dot_img">

                    <ImageView
                        android:id="@+id/drop_loc_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_location"
                        android:padding="6dp"
                        android:background="@drawable/black_circle"
                        android:backgroundTint="@color/colorSecondary"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/txt_drop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Coimbatore"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_centerVertical="true"
                        style="@style/SansRegularStyle"
                        android:layout_marginStart="4dp"
                        android:layout_toEndOf="@+id/drop_loc_img"/>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/cancel_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:layout_below="@id/pic_drop_loc_lay"
                android:background="@drawable/cancel_bg"
                android:visibility="gone">

                <TextView
                    android:id="@+id/val_cancel_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Cancelled"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    style="@style/SansRegularStyle"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/remark_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:layout_below="@id/cancel_lay"
                android:background="@drawable/remarks_bg"
                android:visibility="visible">

                <TextView
                    android:id="@+id/val_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Remarks"
                    android:textColor="@color/green"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    style="@style/SansRegularStyle"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/createdBy"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="CreateBy"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_marginEnd="4dp"
                style="@style/SansRegularStyle"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:layout_below="@+id/remark_lay"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/action_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/view">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <RelativeLayout
                        android:id="@+id/customer_call_lay"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/blue_circle"
                        android:backgroundTint="@color/green"
                        android:layout_marginTop="4dp"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/call_24px"
                            android:layout_centerInParent="true"
                            app:tint="@color/white" />

                    </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dle_indent"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/blue_circle"
                    android:backgroundTint="@color/red"
                    android:layout_marginTop="6dp"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_delete_24"
                        android:layout_centerInParent="true"
                        app:tint="@color/white" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/cancel_action_lay"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/red"
                android:background="@drawable/blue_circle"
                android:visibility="gone"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/thumb_down_24px"
                    app:tint="@color/white"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/line_grey"
            android:layout_below="@id/content_layout"/>

        <RelativeLayout
            android:id="@+id/loc_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/amount"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:id="@+id/val_truck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="truck"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    style="@style/SansRegularStyle"
                    android:layout_alignParentStart="true"
                    android:drawableStart="@drawable/small_truck"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/black"
                    android:maxLines="1"
                    />

                <TextView
                    android:id="@+id/views"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="2dp"
                    android:text="|"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/val_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Body Type"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    style="@style/SansRegularStyle"
                    android:layout_marginStart="3dp" />

                <TextView
                    android:id="@+id/tView"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="2dp"
                    android:text="|"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_cust_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="KarthikMani Arun kumar raja"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    style="@style/SansRegularStyle"
                    android:layout_marginStart="3dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/small_person"
                    android:drawableTint="@color/black"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:ellipsize="end"/>

            </LinearLayout>

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:text="1000"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginStart="4dp"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>